
{{ include('UserBundle::smallBag.html.twig') }}

{% if bigBagDisp == 'block' %} 
    <table class="goodsbasketfont m-cart-full">
		<tr><td colspan= "7">Ваша корзина:</td></tr>
		<tr>
			<th>Товар</th>
			<th>Размер</th>
			<th>Цвет</th>
			<th>Цена за ед</th>
			<th>Кол-во</th>
			<th>Цена за все</th>
			<th> </th>
		</tr>

		{% for childrenGood in childrenGoods %}
		<tr class="onerow">
			<td>{{ childrenGood.title }}</td>
			<td>
				{{ sizeTitle[loop.index0] }}
			</td>
			<td>
				{{ colorTitle[loop.index0] }}
			</td>
			<td>{{ childrenGood.priceGoods.rub }}</td>
			<td>{{ nid[loop.index0] }}</td>
			<td>{{ priceone[loop.index0] }}</td>
			<td>
				<i id="fountainG" class="fountainG{{ childrenGood.id }}{{ sizearr[loop.index0] }}{{ colorarr[loop.index0]}}"  data-fountain>
					<i id="fountainG_1" class="fountainG"></i>
					<i id="fountainG_2" class="fountainG"></i>
					<i id="fountainG_3" class="fountainG"></i>
					<i id="fountainG_4" class="fountainG"></i>
					<i id="fountainG_5" class="fountainG"></i>
					<i id="fountainG_6" class="fountainG"></i>
					<i id="fountainG_7" class="fountainG"></i>
					<i id="fountainG_8" class="fountainG"></i>
				</i>
				<img class="goodsbasketclearone" id="good_click_id" src="{{ asset('bundles/app/user/elements/delete_16x16.png')}}" onclick="goodbasketdel({{ childrenGood.id }}, {{ sizearr[loop.index0] }}, {{ colorarr[loop.index0] }}, 'true', 'ajax_bag_user')">
			</td>
		</tr>		
		{% endfor %}
		<tr><td colspan= "7">К оплате: {{ priceall }}</td></tr>{#$prsite#}
		<tr>
			<td colspan= "4"><a type="button" class="btn btn-default buylab" href="{{ path('bag_register_secure') }}">Оформить</a></td>{#$dirbasbi#}
			<td colspan= "3"><button type="button" class="btn btn-default" onclick="goodbasketcheck('-1', 'false', 'ajax_bag_user')">Очистить корзину</button></td>
		</tr>
	</table>
{% endif %}

